# Example Environment Configuration
# Copy this file to .env.docker (for production) or .env.dev (for development)
# and update the values as needed

# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_DATABASE=secure_statements
DB_SYNCHRONIZE=false
DB_LOGGING=false

# MinIO/S3 Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_EXTERNAL_ENDPOINT=localhost
STORAGE_EXTERNAL_PORT=9002
STORAGE_ACCESS_KEY=your_access_key_here
STORAGE_SECRET_KEY=your_secret_key_here
STORAGE_BUCKET_NAME=statements
STORAGE_USE_SSL=false
STORAGE_PATH_STYLE=true
STORAGE_REGION=us-east-1

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Docker Compose Environment Variables
POSTGRES_DB=secure_statements
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

MINIO_ROOT_USER=your_minio_user_here
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

APP_PORT=3000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf

# JWT Configuration (for future use)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting (for future use)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# File Upload Configuration (for future use)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx