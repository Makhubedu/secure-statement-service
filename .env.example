# Example Environment Configuration
# Copy this file to .env.docker (for production) or .env.dev (for development)
# and update the values as needed

# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
PORT=3000

# SuperTokens Configuration
SUPERTOKENS_APP_NAME=Your App Name
SUPERTOKENS_API_DOMAIN=http://localhost:3000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000
SUPERTOKENS_CONNECTION_URI=https://try.supertokens.com
SUPERTOKENS_API_KEY=your_supertokens_api_key
SUPERTOKENS_DASHBOARD_API_KEY=your_dashboard_api_key

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=your_database_name
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000
DB_SSL=false

# MinIO/S3 Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_EXTERNAL_ENDPOINT=localhost
STORAGE_EXTERNAL_PORT=9002
STORAGE_ACCESS_KEY=your_access_key_here
STORAGE_SECRET_KEY=your_secret_key_here
STORAGE_BUCKET_NAME=statements
STORAGE_USE_SSL=false
STORAGE_PATH_STYLE=true
STORAGE_REGION=us-east-1

# Security Configuration
JWT_SECRET=your_very_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# SuperTokens Configuration (Self-hosted)
SUPERTOKENS_APP_NAME=Secure Statement Service
SUPERTOKENS_API_DOMAIN=http://localhost:3000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000
SUPERTOKENS_CONNECTION_URI=http://supertokens:3567
SUPERTOKENS_API_KEY=your_api_key_here
SUPERTOKENS_DASHBOARD_API_KEY=your_dashboard_api_key_here
SUPERTOKENS_DASHBOARD_ADMINS=admin@yourdomain.com,superadmin@yourdomain.com

# SuperTokens Admin Setup (for automated admin user creation)
SUPERTOKENS_ADMIN_EMAIL=admin@yourdomain.com
SUPERTOKENS_ADMIN_PASSWORD=AdminPassword123!

# SuperTokens Database Configuration
SUPERTOKENS_DB_USER=supertokens_user
SUPERTOKENS_DB_PASSWORD=supertokens_password
SUPERTOKENS_DB_NAME=supertokens
SUPERTOKENS_DB_PORT=5433
SUPERTOKENS_PORT=3567

# PDF Configuration

# Docker Compose Environment Variables
POSTGRES_DB=secure_statements
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

MINIO_ROOT_USER=your_minio_user_here
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

APP_PORT=3000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf

# JWT Configuration (for future use)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting (for future use)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# File Upload Configuration (for future use)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx