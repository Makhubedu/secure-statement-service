# Example Environment Configuration
# Copy this file to .env.docker (for production) or .env.dev (for development)
# and update the values as needed

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=change_this_password
DB_DATABASE=secure_statements
DB_SYNCHRONIZE=false
DB_LOGGING=false

# MinIO Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=minio
STORAGE_PORT=9000
STORAGE_ACCESS_KEY=change_this_access_key
STORAGE_SECRET_KEY=change_this_secret_key
STORAGE_BUCKET_NAME=statements
STORAGE_USE_SSL=false
STORAGE_PATH_STYLE=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Docker Compose Infrastructure Environment Variables
# PostgreSQL
POSTGRES_DB=secure_statements
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_PORT=5432

# MinIO
MINIO_ROOT_USER=change_this_user
MINIO_ROOT_PASSWORD=change_this_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Application
APP_PORT=3000

# JWT Configuration (for future use)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting (for future use)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# File Upload Configuration (for future use)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx