# Environment Configuration for Production Docker
NODE_ENV=production
PORT=3000

# Database Configuration
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password123
DB_DATABASE=secure_statements
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000
DB_SSL=false

# MinIO Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=minio
STORAGE_PORT=9000
STORAGE_EXTERNAL_ENDPOINT=localhost
STORAGE_EXTERNAL_PORT=9002
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET_NAME=statements
STORAGE_USE_SSL=false
STORAGE_PATH_STYLE=true
STORAGE_REGION=us-east-1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# SuperTokens Configuration (Self-hosted Docker)
SUPERTOKENS_APP_NAME=Secure Statement Service
SUPERTOKENS_API_DOMAIN=http://localhost:3000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000
SUPERTOKENS_CONNECTION_URI=http://supertokens:3567
SUPERTOKENS_API_KEY=
SUPERTOKENS_DASHBOARD_API_KEY=docker-dashboard-key-456
SUPERTOKENS_DASHBOARD_ADMINS=admin@yourdomain.com,superadmin@yourdomain.com

# SuperTokens Admin Setup (for automated admin user creation)
SUPERTOKENS_ADMIN_EMAIL=admin@yourdomain.com
SUPERTOKENS_ADMIN_PASSWORD=AdminPassword123!

# SuperTokens Database Configuration
SUPERTOKENS_DB_USER=supertokens_user
SUPERTOKENS_DB_PASSWORD=supertokens_password
SUPERTOKENS_DB_NAME=supertokens
SUPERTOKENS_DB_PORT=5433
SUPERTOKENS_PORT=3567

# PDF Configuration
PDF_MAX_SIZE_MB=10
DOWNLOAD_LINK_EXPIRY_MINUTES=5

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Docker Compose Infrastructure Environment Variables
POSTGRES_DB=secure_statements
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password123
POSTGRES_PORT=5432

MINIO_ROOT_USER=minioadmin
